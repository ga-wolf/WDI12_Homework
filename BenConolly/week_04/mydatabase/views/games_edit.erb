<h2>Add Game</h2>

<form action="/games/<%= @game['id'] %>" method="post">
  <label for="">Name</label>
  <input type="text" name="name" value="<%= @game['name'] %>">
  <label for="">Studio</label>
  <input type="text" name="studio" value="<%= @game['studio'] %>">
  <label for="">Cover</label>
  <input type="url" name="cover" value="<%= @game['cover'] %>">
  <label for="">Genre</label>
  <input type="text" name="genre" value="<%= @game['genre'] %>">
  <label for="">Score</label>
  <input type="integer" name="score" value="<%= @game['score'] %>">
<!--   <label for="">Recommend</label>
  <input type="boolean" name="recommend"> -->
<button>Submit info</button>
</form>
