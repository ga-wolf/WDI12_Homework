@import url(https://fonts.googleapis.com/css?family=Ubuntu);

* {
    box-sizing: border-box;
}

html, body {
    min-height: 100%;
}

body {
    margin: 0;
    padding: 0;
    font-family: 'Ubuntu', sans-serif;
    color: white;
    line-height: 1.4em;
    background-image: url(/images/cinema_bg.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

ul {
    margin: 0;
    padding: 0;
}

li {
    list-style-type: none;
}

.error-message {
    text-align: center;
}

.container {
    min-width: 400px;
    max-width: 800px;
    margin: auto;
}

.movie-box {
    width: 58%;
    padding: 2em;
    padding-bottom: 1em;
    margin: auto;
    background-color: rgba(168, 0, 0, 0.75);
    border-bottom-left-radius: 25px;
    border-bottom-right-radius: 25px;
    border: 2px solid black;
}

.movie-box a {
    color: black;
    text-decoration: none;
}

.movie-box a:hover {
    text-decoration: underline;
}

.center, .movie-box h1, .movie-box h2, .movie-box form {
    text-align: center;
}

.movie-box img {
    display: block;
    margin: 0 auto;
}

.movie-box form {
    margin-bottom: 1em;
}

.movie-box form input[type=text] {
    height: 40px;
    padding-left: 0.5em;
    font-family: 'Ubuntu', sans-serif;
    border: 2px solid black;
}

.movie-box form button {
    height: 40px;
    padding: 9px;
    font-family: 'Ubuntu', sans-serif;
    background-color: red;
    border: 2px solid black;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}

#movie-info {
    width: 100%;
    margin: auto;
    border: 1px solid black;
}

.stars {
    height: 29px;
    width: 309px;
    margin: auto;
}

#full-stars {
    background: url(/images/stars.png);
    background-repeat: no-repeat;
    position: relative;
}

#empty-stars {
    background-image: url(/images/stars_blank.png);
    background-repeat: no-repeat;
    position: relative;
    bottom: 29px;
    margin-bottom: -30px;
}