<h1><%= @book.title %></h1>
<%= image_tag(@book.image, :class => 'feature') %>

<p>Artist: <%= link_to(@book.author.name, @book.author) unless @book.author.nil? %></p>
<p>Year: <%= @book.year %></p>
<p>Medium: <%= @book.genre %></p>
<p>Style: <%= @book.description %></p>

<div class="controls">
  <%= link_to 'Edit Book', edit_book_path(@book) %>
  <%=  link_to 'Delete Book', @book, :method => :delete, :data => { :confirm => 'Are you sure?'} %>
</div>