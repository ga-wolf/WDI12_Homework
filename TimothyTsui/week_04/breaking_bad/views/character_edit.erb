<form action="/characters/<%= @character['id'] %>" method="post">
  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" value="<%= @character['first_name'] %>">
  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name" value="<%= @character['last_name'] %>">
  <label for="age">Age:</label>
  <input type="number" name="age" value="<%= @character['age'] %>">
  <label for="gender">Gender:</label>
  <input type="text" name="gender" value="<%= @character['gender'] %>">
  <label for="occupation">Occupation:</label>
  <input type="text" name="occupation" value="<%= @character['occupation'] %>">
  <label for="aliases">Aliases:</label>
  <input type="text" name="aliases" value="<%= @character['aliases'] %>">
  <label for="image">Image:</label>
  <input type="url" name="image" value="<%= @character['image'] %>">
  <button>Update character</button>
</form>