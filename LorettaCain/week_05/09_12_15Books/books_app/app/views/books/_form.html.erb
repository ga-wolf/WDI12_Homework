<div class="form">
<%= form_for @book do |f|  %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
</p>
<p>
  <%= f.label :year %>
  <%= f.text_field :year, :required => true %>
</p>
<p>
  <%= f.label :genre %>
  <%= f.text_field :genre, :required => true %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_field :description, :required => true %>
</p>
<p>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
</p>
<p>
  <%= f.label :author_id %>
  <%= f.select :author_id, Author.all.map { |a| [ a.name, a.id ] }, :include_blank => true %>
</p>

<%= f.submit %>
<% end %>
</div>