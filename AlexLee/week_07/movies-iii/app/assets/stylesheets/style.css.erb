@import url(https://fonts.googleapis.com/css?family=Ubuntu);

* {
    box-sizing: border-box;
}

html, body {
    min-height: 100%;
}

body {
    height: 100%;
    font-family: "Ubuntu";
    color: orange;
    background-color: black;
}

h1 {
    text-align: center;
    font-size: 5em;
    margin: 0;
    margin-bottom: 20px;
}

.container {
    height: 100vh;
    position: relative;
}

.center-block {
    float: none;
    margin: auto;
}

.no-pad {
    padding: 0;
}

.movie-box {
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
    right: 0;
}

.movie-box > form > input {
    height: 60px;
    font-size: 2em;
    border: 2px solid white;
}

.movie-box > form > input[type="submit"] {
    color: white;
    background-color: orange;
}

#backgroundfade {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-color: black;
    opacity: 0.4;
    position: fixed;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: -2;
}

@media (max-width: 992px) {
    .movie-box > form > input {
        font-size: 1.5em;
    }
}

