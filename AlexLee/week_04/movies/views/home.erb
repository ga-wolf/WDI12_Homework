    <div class="movie-box">
        <h1>Movies!!!</h1>

        <form action="/">
            <input type="text" name="movie_title" placeholder="Movie Title" autofocus>
            <button>Get Movie Info</button>
        </form>

        <%
            redirect to("/?movie=#{@movies[0]['Title']}") if @movies.length == 1
            @movies.each do|movie|
        %>
        <a href='/?movie=<%= movie["Title"] %>'><%= movie["Title"] %></a><br>
        <% end %>

        <% if @movies.length == 0 && params[:movie].to_s.length == 0 %>
            <div class="center"><%= "Found no movies matching \"#{params[:movie_title]}\"" %></div>
        <% end %>
        

        <img src="<%= @movie["Poster"] %>"/>

    </div>